<div class = "contetn-device">
	<h1>Sign in</h1>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :login %><br />
	  <%= f.text_field :first_name, :autofocus => true, :placeholder => "login" %></div>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, :placeholder => "password" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div class = "btn-sing"><%= f.submit "Sign in", :class => 'btn btn-info'%></div>
	<% end %>
</div>
