<h1>Listing buttons</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Glyph</th>
      <th>Show only</th>
      <th>Show except</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @buttons.each do |button| %>
      <tr>
        <td><%= button.content %></td>
        <td><%= button.glyph %></td>
        <td><%= button.show_only %></td>
        <td><%= button.show_except %></td>
        <td><%= link_to 'Show', button %></td>
        <td><%= link_to 'Edit', edit_button_path(button) %></td>
        <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><% button.permissions.each do |p| %>
            <%= p.id %>
            <%= p.page %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

